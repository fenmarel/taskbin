<h4><span class="glyphicon glyphicon-user"></span> My Boards</h4>

<% boards.each(function(board) { %>
  <a href="#/boards/<%= board.id %>" class="btn btn-primary board-object">
    <%= board.escape('title') %>
  </a>
<% }); %>
<hr>
<form class="form-inline" role="form" id="new-board">
  <div class="form-group">
    <input type="text" name="board[title]" placeholder="New Board Title"
           class="form-control">
  </div>
  <input type="submit" value="&#43; New Board" class="btn btn-taskbin">
</form>